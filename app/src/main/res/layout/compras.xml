<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white2"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="143dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Logo"
        app:srcCompat="@drawable/copilot_20251105_154014" />

    <!-- Campo Produto -->
    <EditText
        android:id="@+id/txtProduto"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Insira o nome do produto"
        android:inputType="text"
        android:textColor="#2A2727"
        android:textColorHint="#2A2727"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo Quantidade -->
    <EditText
        android:id="@+id/txtQuantidade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Quantidade"
        android:inputType="number"
        android:textColor="#2A2727"
        android:textColorHint="#2A2727"
        app:layout_constraintTop_toBottomOf="@id/txtProduto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Botão Adicionar -->
    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        app:layout_constraintTop_toBottomOf="@id/txtQuantidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Spinner Produtos -->
    <Spinner
        android:id="@+id/spProdutos"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#2A2727"
        app:layout_constraintTop_toBottomOf="@id/btnAdicionar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Botão Remover -->
    <Button
        android:id="@+id/btnRemover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover"
        app:layout_constraintTop_toBottomOf="@id/spProdutos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Lista de Produtos -->
    <ListView
        android:id="@+id/lista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="#37716C6C"
        android:cacheColorHint="#2A2727"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRemover" />
</androidx.constraintlayout.widget.ConstraintLayout>
